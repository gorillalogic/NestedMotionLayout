<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <color android:color="@android:color/transparent" />
            </item>

            <item android:height="20dp" android:gravity="bottom">
                <shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="@android:color/white" android:startColor="@android:color/transparent" android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>